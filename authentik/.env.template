# onestack/authentik/.env.template
# Copy this file to .env and fill in your actual values

# -- Authentik Configuration --

# Required: Generate these with the commands below:
# echo "AUTHENTIK_SECRET_KEY=$(openssl rand -base64 60 | tr -d '\n')" >> .env
# 
# Secret key for Authentik (required) - Generate with: openssl rand -base64 60
AUTHENTIK_SECRET_KEY=

# Optional: Authentik version tag (defaults to latest)
AUTHENTIK_TAG=2025.6.4

# Optional: Authentik image (defaults to official)
AUTHENTIK_IMAGE=ghcr.io/goauthentik/server

# Database name for Authentik in shared PostgreSQL
POSTGRES_AUTHENTIK_DB=authentik

# Error reporting (optional, defaults to true)
AUTHENTIK_ERROR_REPORTING_ENABLED=true

# -- Email Configuration (optional but recommended) --
# By default, uses OneStack's Brevo SMTP configuration from main .env
# Override these if you want different email settings for Authentik

# AUTHENTIK_EMAIL_HOST=
# AUTHENTIK_EMAIL_PORT=
# AUTHENTIK_EMAIL_USERNAME=
# AUTHENTIK_EMAIL_PASSWORD=
# AUTHENTIK_EMAIL_USE_TLS=true
# AUTHENTIK_EMAIL_USE_SSL=false
# AUTHENTIK_EMAIL_TIMEOUT=10
# AUTHENTIK_EMAIL_FROM=authentik@${BASE_DOMAIN}

# -- Advanced Configuration --
# Uncomment and modify if needed

# Custom port configuration (defaults to 9000 for HTTP, 9443 for HTTPS)
# COMPOSE_PORT_HTTP=9000
# COMPOSE_PORT_HTTPS=9443

