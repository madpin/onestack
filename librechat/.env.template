# onestack/librechat/.env.template
# Copy this file to .env and fill in your actual values

# -- LibreChat Configuration --
# These values are inherited from the root .env file

# RAG API Configuration
RAG_PORT=8000

# LibreChat Specific Configuration
LIBRECHAT_CONFIG_PATH=./librechat.yaml

# Authentication & Security
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here
CREDS_KEY=your-creds-key-here
CREDS_IV=your-creds-iv-here

# External API Keys (if using external AI services)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Email Configuration (optional)
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# File Upload Configuration
UPLOAD_LIMIT=20971520  # 20MB
FILE_UPLOAD_LIMIT=100000000  # 100MB

# Other Configuration
ALLOW_EMAIL_LOGIN=true
ALLOW_REGISTRATION=true
ALLOW_SOCIAL_LOGIN=false
ALLOW_SOCIAL_REGISTRATION=false
SESSION_EXPIRY=1000 * 60 * 15  # 15 minutes
REFRESH_TOKEN_EXPIRY=1000 * 60 * 60 * 24 * 7  # 7 days