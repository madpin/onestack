# onestack/dbgate/.env.template
# Copy this file to .env and fill in your actual values

# -- DBGate Configuration --
# Database connection settings (inherited from root .env)
# POSTGRES_HOST=postgres
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your-secure-password
# POSTGRES_PORT=5432

# MongoDB connection settings (inherited from root .env)
# MONGODB_HOST=mongodb
# MONGODB_USER=root
# MONGODB_PASSWORD=your-secure-password
# MONGODB_PORT=27017

# Additional database connections can be configured here
# Example for additional connections:
# CONNECTIONS=mypg,myredis,mymongo
# LABEL_myredis=Redis Connection
# SERVER_myredis=redis
# PORT_myredis=6379
# ENGINE_myredis=redis@dbgate-plugin-redis

