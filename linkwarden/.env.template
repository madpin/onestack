# OneStack Linkwarden Configuration Template
# Copy this file to .env and fill in your actual values

# Linkwarden Core Settings
LINKWARDEN_NEXTAUTH_SECRET=change-this-to-a-very-long-random-string-at-least-32-characters
LINKWARDEN_DISABLE_REGISTRATION=false
LINKWARDEN_MAX_LINKS_PER_USER=

# AI Configuration (uses OneStack's LiteLLM)
OPENAI_API_KEY_LINKWARDEN=sk-your-litellm-api-key

# Optional: Ollama Configuration (alternative to OpenAI)
# NEXT_PUBLIC_OLLAMA_ENDPOINT_URL=http://ollama:11434
# OLLAMA_MODEL=phi3:mini-4k

# Optional: Advanced Settings
# ARCHIVE_TAKE_COUNT=50
# BROWSER_TIMEOUT=30000
# IGNORE_UNAUTHORIZED_CA=false
# IGNORE_HTTPS_ERRORS=false
# IGNORE_URL_SIZE_LIMIT=false
# PDF_MAX_BUFFER=50
# SCREENSHOT_MAX_BUFFER=50
# READABILITY_MAX_BUFFER=50
# PREVIEW_MAX_BUFFER=50
# MONOLITH_MAX_BUFFER=50
# TEXT_CONTENT_LIMIT=100000
# INDEX_TAKE_COUNT=100

# SMTP Settings (optional - for email features)
# Uses global SMTP configuration from root .env
# NEXT_PUBLIC_EMAIL_PROVIDER=true
# EMAIL_FROM=linkwarden@${BASE_DOMAIN}
# EMAIL_SERVER=smtp://${SMTP_SMTP2GO_USER}:${SMTP_SMTP2GO_PASS}@${SMTP_SMTP2GO_HOST}:${SMTP_SMTP2GO_PORT}

# SSO/OAuth Settings (optional)
# Enable Authentik integration if needed
# NEXT_PUBLIC_AUTHENTIK_ENABLED=true
# AUTHENTIK_ISSUER=https://authentik.${BASE_DOMAIN}/application/o/linkwarden/
# AUTHENTIK_CLIENT_ID=your-client-id
# AUTHENTIK_CLIENT_SECRET=your-client-secret

