## .env.template
# Copy this file to .env and fill in your actual values.
# Comments provide guidance on what each variable is for.

# --- General Docker Settings ---
# User and Group ID for file permissions on mounted volumes.
# To get your current user's UID and GID, you can run: echo "UID=$(id -u) GID=$(id -g)"
UID=1000
GID=1000
PUID=1000
PGID=1000

# Traefik configuration
BASE_DOMAIN=your.domain.com # Base domain for all services
ACME_EMAIL=your-email@example.com # Let's Encrypt Email
ADMIN_EMAIL=admin@yourdomain.com

# Docker Compose configuration
WEB_NETWORK_NAME=web # Shared Web Docker network name
INTERNAL_NETWORK_NAME=onestack_internal_network # Internal Docker network name for service communication

# REDIS configuration
REDIS_HOST=redis
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379

# PostgreSQL database configuration
POSTGRES_HOST=postgres  # Service name in Docker Compose
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_PORT=5432

# PostgreSQL database names
POSTGRES_LITELLM_DB=litellm
POSTGRES_CASDOOR_DB=casdoor
OPENWEBUI_DB_NAME=openwebui
POSTGRES_TTRSS_DB=ttrss
POSTGRES_N8N_DB=n8n

# MEILI Search configuration    
MEILI_MASTER_KEY=your_meili_master_key

# Adresses for services
MEILI_ADDR=http://meilisearch:7700
CHROME_ADDR=http://chrome:9222
SEARXNG_ADDR=http://searxng:8080
LITELLM_ADDR=http://litellm:8000
LITELLM_EXTERNAL_ADDR=http://litellm:8000

# MongoDB configuration
MONGODB_ROOT_USER=root
MONGODB_HOST=mongodb
MONGODB_ROOT_PASSWORD=your_mongodb_root_password
MONGODB_USER=appuser
MONGODB_PASSWORD=your_mongodb_app_password
MONGODB_PORT=27017

# SMTP configuration
SMTP_GMAIL_USER=your_gmail_user@gmail.com
SMTP_GMAIL_PASS=your_gmail_app_password
SMTP_GMAIL_HOST=smtp.gmail.com
SMTP_GMAIL_PORT=587

# Brevo SMTP configuration
SMTP_BREVO_HOST=smtp-relay.brevo.com
SMTP_BREVO_PORT=587
SMTP_BREVO_USER=your_brevo_user@smtp-brevo.com
SMTP_BREVO_PASS=your_brevo_password

# SMTP2GO configuration
SMTP_SMTP2GO_HOST=mail.smtp2go.com
# SMTP2GO_PORT=2525
SMTP_SMTP2GO_PORT=465
SMTP_SMTP2GO_ALT_PORTS=8025,587,80,25
SMTP_SMTP2GO_SSL_PORTS=465,8465,443
SMTP_SMTP2GO_USER=your_smtp2go_user
SMTP_SMTP2GO_PASS=your_smtp2go_password
SMTP_SMTP2GO_SECURE=tls

# Tailscale network configuration
TAILSCALE_NETWORK_NAME=tailscale_network

# Auth0 configuration
AUTH0_DOMAIN='yourdomain.eu.auth0.com'
AUTH0_DOMAIN_ADDR='https://yourdomain.eu.auth0.com'
AUTH0_CLIENT_ID='your_auth0_client_id'
AUTH0_CLIENT_SECRET='your_auth0_client_secret'

# S3 configuration
S3_R2_ACCESS_KEY_ID=your_s3_access_key_id
S3_R2_SECRET_ACCESS_KEY=your_s3_secret_access_key
S3_R2_ENDPOINT=https://your_s3_endpoint
S3_R2_PUBLIC_DOMAIN=https://your_s3_public_domain

# ClickHouse configuration
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_USER=your_clickhouse_user
CLICKHOUSE_PASSWORD=your_clickhouse_password
CLICKHOUSE_DB=default
CLICKHOUSE_PORT_HTTP=8123
CLICKHOUSE_PORT_NATIVE=9000

# ClickHouse connection string
CLICKHOUSE_ADDR=http://clickhouse:8123

# DBGate configuration
DBGATE_WEB_LOGIN=your_dbgate_login
DBGATE_WEB_PASSWORD=your_dbgate_password

TZ=Europe/Dublin

DOCKERHUB_GITHUB_USER=your_dockerhub_user
DOCKERHUB_GITHUB_TOKEN=your_dockerhub_token

# Litellm Keys:
OPENAI_BASE_URL=https://litellm.yourdomain.dev/v1
OPENAI_API_KEY_KILO=sk-your_openai_key

# Redis (Cache, Queue)
REDIS_HOST=redis                     # Service name of Redis in Docker Compose
REDIS_PASSWORD=your_strong_redis_password_here
REDIS_PORT=6379                             # Default Redis port

# PostgreSQL (Database)
# Note: Specific database names (e.g., for n8n, ttrss) are usually configured
# in the respective service's .env.template or docker-compose.yml.
POSTGRES_HOST=postgres               # Service name of PostgreSQL in Docker Compose
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_strong_postgres_password_here
POSTGRES_PORT=5432                          # Default PostgreSQL port

# Meilisearch (Search Engine)
MEILI_MASTER_KEY=your_strong_meilisearch_master_key_here # Master key for Meilisearch instance

# Service Addresses (for inter-container communication, usually no change needed)
MEILI_ADDR=http://meilisearch:7700   # Internal address for Meilisearch
CHROME_ADDR=http://chrome:9222       # Internal address for headless Chrome (use ws:// for Puppeteer)

# MongoDB (Database)
# Note: Specific database names are usually configured by the services using MongoDB.
MONGODB_HOST=mongodb                 # Service name of MongoDB in Docker Compose
MONGODB_ROOT_USER=root
MONGODB_ROOT_PASSWORD=your_strong_mongodb_root_password_here
MONGODB_USER=appuser                        # General application user for MongoDB
MONGODB_PASSWORD=your_strong_mongodb_app_password_here
MONGODB_PORT=27017                          # Default MongoDB port

# ClickHouse (Analytics Database)
CLICKHOUSE_HOST=clickhouse           # Service name of ClickHouse in Docker Compose
CLICKHOUSE_USER=your_clickhouse_user
CLICKHOUSE_PASSWORD=your_strong_clickhouse_password_here
CLICKHOUSE_DB=default                       # Default database name
CLICKHOUSE_PORT_HTTP=8123                   # HTTP interface port
CLICKHOUSE_PORT_NATIVE=9000                 # Native TCP port
CLICKHOUSE_ADDR=http://clickhouse:8123      # Full HTTP address for service connections

# SMTP (Email Sending - Example using Gmail)
# Ensure you use an "App Password" for GMAIL_PW if 2-Factor Authentication is enabled on the account.
GMAIL_EMAIL=your-email@gmail.com
GMAIL_PW=your_gmail_app_password_here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587                               # Standard TLS port for SMTP submission

