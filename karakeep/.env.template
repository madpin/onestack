# onestack/karakeep/.env.template
# Copy this file to .env and fill in your actual values

# -- Configuration --
# Karakeep version to use (optional, defaults to 'release')
KARAKEEP_VERSION=release

# NextAuth configuration
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# OpenAI configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=http://litellm:4000/v1/

# Crawler configuration
CRAWLER_NUM_WORKERS=2
CRAWLER_SCREENSHOT_TIMEOUT_SEC=60
CRAWLER_FULL_PAGE_SCREENSHOT=true

# Data directory
DATA_DIR=/data

# Inference configuration
INFERENCE_TEXT_MODEL=gpt-4.1-mini
INFERENCE_IMAGE_MODEL=gpt-4.1-mini
EMBEDDING_TEXT_MODEL=text-embedding-3-small
INFERENCE_CONTEXT_LENGTH=8192

# Inference features
INFERENCE_ENABLE_AUTO_SUMMARIZATION=true
INFERENCE_JOB_TIMEOUT_SEC=60
INFERENCE_ENABLE_IMAGE_GENERATION=true

# User management
DISABLE_SIGNUPS=true

